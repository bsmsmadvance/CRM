                           TextColor="#2B2B2B"
                           Style="{StaticResource FontRegular}" />
                    <Label Grid.Row="3"
                           Grid.Column="1"
                           Text="{Binding UpdatedDate}"
                           FontSize="14"
                           TextColor="#2B2B2B"
                           Style="{StaticResource FontRegular}" />
                    <Label Grid.Row="4"
