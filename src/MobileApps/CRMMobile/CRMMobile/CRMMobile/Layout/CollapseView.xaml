                            <TapGestureRecognizer Command="{prism:NavigateTo 'OpportunityDetail'}"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="&#xE905;"
                           Grid.Row="0"
                           Grid.Column="3"
                           FontFamily="{StaticResource IcomoonFont}"
                           FontSize="18"
                           TextColor="#8992A7"
                           VerticalTextAlignment="Center" />
                </Grid>-->
