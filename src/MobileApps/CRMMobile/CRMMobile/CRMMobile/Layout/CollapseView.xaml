                           VerticalTextAlignment="Center">
                        <Label.Effects>
                            <local:UnderlineEffect />
                        </Label.Effects>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{prism:NavigateTo 'OpportunityRevisitForm'}" />
                        </Label.GestureRecognizers>
                    </Label>
