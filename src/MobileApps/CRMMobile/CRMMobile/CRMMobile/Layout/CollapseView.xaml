                           Grid.Column="0"
                           Text="{Binding RevisitCount}"
                           FontSize="14"
                           TextColor="#35ADED"
                           Style="{StaticResource FontRegular}" />
                    <Label Grid.Row="0"
                           Grid.Column="2"
                           Grid.RowSpan="2"
                           Text="&#xE916;"
                           FontSize="14"
                           TextColor="#35ADED"
                           FontFamily="{StaticResource IcomoonFont}"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="End" />
                    <Label Grid.Row="0"
                           Grid.Column="3"
