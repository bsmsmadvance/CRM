                           Grid.Column="0"
                           Text="{Binding Contact.ContactNo}"
                           FontSize="14"
                           TextColor="#2B2B2B"
                           Style="{StaticResource FontRegular}" />
                    <Label Grid.Row="5"
                           Grid.Column="1"
                           Text="วรรณรัตน์ กันหมุด"
                           FontSize="14"
                           TextColor="#2B2B2B"
                           Style="{StaticResource FontRegular}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Contact.FirstNameTH}"></Span>
                                <Span Text=" "></Span>
                                <Span Text="{Binding Contact.LastNameTH}"></Span>
                            </FormattedString>
                        </Label.FormattedText>
