                                                       VerticalTextAlignment="Start" />
                                                <Label Grid.Row="0"
                                                       Grid.Column="1"
                                                       Text="วันที่ทำรายการ"
                                                       TextColor="#7A7A7A"
                                                       FontSize="13"
                                                       Style="{StaticResource FontRegular}"
                                                       VerticalTextAlignment="End" />
                                                <Label Grid.Row="1"
                                                       Grid.Column="1"
                                                       Text="20/01/2019"
                                                       TextColor="#2B2B2B"
                                                       FontSize="13"
                                                       Style="{StaticResource FontRegular}"
                                                       VerticalTextAlignment="Start" />
                                            </Grid>
                                        </StackLayout>
                                    </Frame>
                                </DataTemplate>
                            </al:RepeatableStack.ItemTemplate>
                        </al:RepeatableStack>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </ContentView.Content>
</ContentView>