            <ActivityIndicator Color="Red"
                               IsVisible="{Binding IsBusy}"
                               IsRunning="{Binding IsBusy}"
                               AbsoluteLayout.LayoutFlags="PositionProportional"
                               AbsoluteLayout.LayoutBounds=".5,.5,50,50" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>